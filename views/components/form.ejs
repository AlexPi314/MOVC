<%  
    for(let i=0; i<options.length; i++) {
        if(options[i].type==="many"){
            %>
            <div class="row m-5">
                <div class="col-lg-12"><label class="form-label"><%=options[i].title%></label></div>
                <div class="col-sm-12">
                    <select id="<%=options[i].id%>" class="form-select" name="<%=options[i].id%>">
                    <%
                        for(let g=0; g<options[i].types.length; g++) {
                            if(!options[i].types[g].startsWith("group:")){
                                %>
                                    <option><%= options[i].types[g] %></option>
                                <%  
                            } else{
                                %>
                                    <optgroup label="<%= options[i].types[g].slice(6) %>">
                                <%
                            }
                        }
                    %>
                    </select>
            <%
                    if(options[i].help) %><div class="form-text"><%=options[i].help%></div><%
            %>
                </div>
            </div>
            <%
        }
        else if(options[i].type==="area"){
            %>
            <div class="row m-5">
                <div class="col-lg-12"><label class="form-label"><%=options[i].title%></label></div>
                <div class="col-sm-12">
                    <textarea id="<%=options[i].id%>" name="<%=options[i].id%>" class="form-control"></textarea>
            <%
                    if(options[i].help) %><div class="form-text"><%-options[i].help%></div><%
            %>
                </div>
            </div>
            <%
        } else {
            %>
            <div class="row m-5">
                <div class="col-lg-12"><label class="form-label"><%=options[i].title%></label></div>
                <div class="col-sm-12">
                    <input type="<%=options[i].type === "sec" ? "password" : "text" %>" id="<%=options[i].id%>" name="<%=options[i].id%>" class="form-control" <%- options[i].required ? "required" : ""%> >
            <%
                    if(options[i].help) %><div class="form-text"><%=options[i].help%></div><%
            %>
                </div>
            </div>
            <%
        }
    }
%>