<!DOCTYPE html>
<% 
let options = [
    {
        title:"Пароль админа",
        id:"pass",
        type: "sec"
    },
    {
        title:"id страны",
        help:"Использовать айди со страницы /pending-countries",
        id:"cidc"
    }
]
%> 
<html>
    <head>
        <%- include("../components/bootstrap") %> 
        <%- include("../components/head") %> 
        <title>Отклонить заявку государства</title>
    </head>
    <body>
        <%- include("../components/menu") %>
        <script src="/public/js/autobind.js"></script> 
        <script>
            const parse = new URLSearchParams(window.location.search);
            let cidc = parse.get('cidc');
            window.addEventListener("load",()=>{
                document.getElementById("cidc").value = cidc;
            });
        </script>
        <div class="container">
            <form action="/delete-country" method="post">
                <%- include("../components/form", {options}) %> 
                <div class="row m-5">
                    <input type="submit" value="Отклонить заявку" class="btn btn-dark">    
                </div>
            </form>
        </div>
    </body>
</html>