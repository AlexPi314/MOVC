<!DOCTYPE html>
<html>
  <head>
    <%- include("../components/bootstrap") %> 
    <%- include("../components/head") %> 
    <%- include("../components/highlight") %> 

    <link rel="stylesheet" href="/public/css/menu.css">
    <title>Описание - <%= country.name %></title>
    <style>
      html{
        overflow-x: hidden;
      }
    </style>
  </head>
  <body>
      <%- include("../components/menu") %> 
      <div class="container borderc country" style="background-color: #f8f9fa;">
          <div class="row">
            <div class="col-sm-12 col-md" itemscope itemtype="http://schema.org/ImageObject">
              <img class="bordert" style="width: 100%;"src=<%= country.img %> itemprop="contentUrl">
            </div>
            <div class="col">
              <div class="row">
                <div class="col">
                  <span>
                    <b><%= country.name %></b> 
                    <%- include("../components/erth2mark") %>
                    <%- include("../components/irlmark") %>
                  </span>
                </div>
                <div class="col text-end">
                  <a href= "/req-country?idc=<%=country.idc%>">
                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-box-arrow-in-down-left" viewBox="0 0 16 16">
                      <path fill-rule="evenodd" d="M9.636 2.5a.5.5 0 0 0-.5-.5H2.5A1.5 1.5 0 0 0 1 3.5v10A1.5 1.5 0 0 0 2.5 15h10a1.5 1.5 0 0 0 1.5-1.5V6.864a.5.5 0 0 0-1 0V13.5a.5.5 0 0 1-.5.5h-10a.5.5 0 0 1-.5-.5v-10a.5.5 0 0 1 .5-.5h6.636a.5.5 0 0 0 .5-.5z"/>
                      <path fill-rule="evenodd" d="M5 10.5a.5.5 0 0 0 .5.5h5a.5.5 0 0 0 0-1H6.707l8.147-8.146a.5.5 0 0 0-.708-.708L6 9.293V5.5a.5.5 0 0 0-1 0v5z"/>
                    </svg>
                  </a>
                </div>
              </div>
              <div class="row">
                  <span><b><%=__("government-form")%>:</b> <%= country.type %></span>
              </div>
              <%
                if(country.rank){%>
                  <div class="row">
                      <span><b><%=__("rating")%>:</b> <%= country.rank %></span>
                  </div>
                <%}
              %>
              <div class="row text-center"><%-include("../components/textads") %></div>
              <%
                if(country.description.length<=900){
                  %>
                  <div class="row">
                      <span><b><%=__("description")%>:</b> <%- country.description %></span>
                  </div>  
                  <%
                }
              %>
            </div>
            <%
              if(country.description.length>900){
                %>
                <div class="row">
                    <span class="col" id="description"><b><%=__("description")%>:</b> <%- country.description %></span>
                </div>
                <%
              }
            %>
          </div>
          <div class="row bordert" style="background-color: #e4e4e4; margin-top: 5px;">
              <div class="col text-center">
                  <p>Правитель: <a href="<%= country.contact %>"><%= country.owner %></a></p>
                </div>
                <% 
                  if(country.site) {
                    %> 
                      <div class="col text-center">
                          <a href= <%= country.site %>><%=__("website")%></a>
                      </div> 
                    <%
                  }
                  if(country.vk) {
                    %> 
                      <div class="col text-center">
                          <a href= <%= country.vk %>><%=__("vk")%></a>
                      </div> 
                    <%
                  }
                %>
                
                <div class="col text-center">
                  <p><%=__("date-of-foundation")%>: <%= country.date %></p>
                </div>
          </div>
        </div>
  </body>
</html>