<!DOCTYPE html>
<% 
let options = [
    {
        title:"Пароль админа",
        id:"pass"
    },
    {
        title:"id страны",
        help:"Использовать айди со страницы /pending-countries",
        id:"idc"
    },
    {
        title:"Соответствие стандарту ERTH2",
        id:"verified",
        help:"false если нет, half если частично соответствует, что угодно если полностью соответствует"
    }
]
%> 
<html>
    <head>
        <%- include("../components/bootstrap") %> 
        <%- include("../components/head") %> 
        <title>Добавить государство</title>
    </head>
    <body>
        <%- include("../components/menu") %>
        <script src="/public/js/autobind.js"></script> 
        <script>
            const parse = new URLSearchParams(window.location.search);
            let idc = parse.get('idc');
            window.addEventListener("load",()=>{
                document.getElementById("idc").value = idc;
            });
        </script>
        <div class="container">
            <form action="/approve-country" method="post">
                <%
                    for(let i=0; i<options.length; i++) {
                        %>
                        <div class="row m-5">
                            <div class="col-lg-12"><label class="form-label"><%=options[i].title%></label></div>
                            <div class="col-sm-12">
                                <input type="text" id="<%=options[i].id%>" name="<%=options[i].id%>" class="form-control">
                        <%
                                if(options[i].help) %><div class="form-text"><%=options[i].help%></div><%
                        %>
                            </div>
                        </div>
                        <%
                    }
                %>
                <div class="row m-5">
                    <input type="submit" value="Добавить государство" class="btn btn-dark">    
                </div>
            </form>
        </div>
    </body>
</html>